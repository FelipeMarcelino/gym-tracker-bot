# Test Environment Configuration
ENVIRONMENT=test

# Test Database - Use SQLite for fast testing
TEST_DATABASE_URL=sqlite+aiosqlite:///test_gym_tracker.db

# Alternative: Use PostgreSQL test database
# TEST_DATABASE_URL=postgresql+asyncpg://postgres:testpassword@localhost:5433/gym_tracker_test

# Disable external services for testing
TELEGRAM_BOT_TOKEN=test_token_12345:abcdef
GROQ_API_KEY=test_groq_key
OLLAMA_HOST=http://localhost:11434

# Test user IDs
AUTHORIZED_USER_IDS=12345,67890

# Faster settings for testing
SESSION_TIMEOUT_HOURS=1
RATE_LIMIT_GENERAL_REQUESTS=100
RATE_LIMIT_VOICE_REQUESTS=50
RATE_LIMIT_COMMAND_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Test file size limits
MAX_AUDIO_FILE_SIZE_MB=50
MAX_VOICE_FILE_SIZE_MB=50
MAX_AUDIO_DURATION_SECONDS=180

# LLM settings for testing
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000