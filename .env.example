# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# User Authorization
# AUTHORIZED_USER_IDS - Comma-separated list of authorized Telegram user IDs
# Example: AUTHORIZED_USER_IDS=123456789,987654321
AUTHORIZED_USER_IDS=your_telegram_user_id

# Optional: First Admin User ID
# This user will be automatically created as admin when the bot starts (if not exists)
# If not set, the first user from AUTHORIZED_USER_IDS will be used
# FIRST_ADMIN_USER_ID=your_telegram_user_id

# Database Configuration
DATABASE_PATH=data/gym_tracker.db

# Optional: Logging Level
# LOG_LEVEL=INFO

# Optional: Backup Configuration
# BACKUP_ENABLED=true
# BACKUP_INTERVAL=86400  # 24 hours in seconds
# BACKUP_RETENTION_DAYS=7

# Optional: Rate Limiting
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_MAX_REQUESTS=30
# RATE_LIMIT_WINDOW_SECONDS=60

# Optional: LLM Service Configuration
# LLM_PROVIDER=ollama
# LLM_MODEL=llama3.2
# LLM_BASE_URL=http://localhost:11434
