# ============================================
# Gym Tracker Bot - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ============================================
# CORE SETTINGS (REQUIRED)
# ============================================

# Telegram Bot Token from @BotFather
# Get from: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Comma-separated list of authorized Telegram user IDs
# Get your ID from: https://t.me/userinfobot
AUTHORIZED_USER_IDS=123456789,987654321

# Database connection URL
# SQLite (default): sqlite:///gym_tracker.db
# PostgreSQL: postgresql://user:password@localhost/dbname
# MySQL: mysql://user:password@localhost/dbname
DATABASE_URL=sqlite:///gym_tracker.db

# ============================================
# AI/ML SETTINGS
# ============================================

# Groq API Key for LLM and Whisper transcription
# Get from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Whisper model for audio transcription
# Options: whisper-large-v3 (recommended), base, small, medium, large
WHISPER_MODEL=whisper-large-v3

# LLM model for workout parsing
# Groq models: llama3-groq-70b-8192-tool-use-preview, llama3.1-70b-versatile
# Ollama models: llama3.1:8b, llama3.2:1b
LLM_MODEL=llama3-groq-70b-8192-tool-use-preview

# Ollama host URL (if using Ollama)
# For Docker: http://host.docker.internal:11434
# For local: http://localhost:11434
OLLAMA_HOST=http://localhost:11434

# LLM configuration
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=8000

# ============================================
# SESSION AND TIMEOUT SETTINGS
# ============================================

# Session timeout in hours (1-24)
SESSION_TIMEOUT_HOURS=3

# ============================================
# RATE LIMITING SETTINGS
# ============================================

# Maximum requests per time window
RATE_LIMIT_GENERAL_REQUESTS=20
RATE_LIMIT_VOICE_REQUESTS=5
RATE_LIMIT_COMMAND_REQUESTS=30

# Rate limit time window in seconds (1-3600)
RATE_LIMIT_WINDOW_SECONDS=60

# Cleanup frequency for rate limit data (hours)
RATE_LIMIT_CLEANUP_FREQUENCY_HOURS=1

# Remove users inactive for this many seconds
RATE_LIMIT_MAX_INACTIVE_SECONDS=3600

# ============================================
# FILE SIZE AND DURATION LIMITS
# ============================================

# Maximum audio file size in MB
MAX_AUDIO_FILE_SIZE_MB=100
MAX_VOICE_FILE_SIZE_MB=100

# Maximum audio duration in seconds
MAX_AUDIO_DURATION_SECONDS=300

# ============================================
# TEXT LIMITS
# ============================================

# Maximum text input length
MAX_TEXT_LENGTH=1000
MAX_NAME_LENGTH=100
MAX_TRANSCRIPTION_LENGTH=10000

# ============================================
# LOGGING SETTINGS
# ============================================

# Log preview lengths
LOG_TEXT_PREVIEW_LENGTH=100
LOG_MESSAGE_PREVIEW_LENGTH=50
